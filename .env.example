# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Backend Configuration
PORT=4000
NODE_ENV=development

# Site URL for server-side API calls (required for PDF generation)
# Development: Use localhost with main app port (Astro runs on 4321)
# Production: Use your production domain
PUBLIC_SITE_URL=http://localhost:4322

# CORS Configuration
PUBLIC_FRONTEND_URL=http://localhost:4321
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
# Email domain configured in Resend (mail.mariohans.cl)
PUBLIC_EMAIL_DOMAIN=mail.mariohans.cl

# Legacy SMTP Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Google Calendar Configuration
# Opción 1: Service Account (Recomendado para producción)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}
# O alternativamente, ruta al archivo JSON:
# GOOGLE_SERVICE_ACCOUNT_KEY_FILE=/path/to/service-account-key.json

# Opción 2: OAuth2 (Para desarrollo)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ID del calendario específico (opcional, por defecto usa 'primary')
GOOGLE_CALENDAR_ID=primary

# WhatsApp Business API Configuration (Meta Cloud API)
# Obtener desde: https://developers.facebook.com > Tu App > WhatsApp
WHATSAPP_API_TOKEN=your-permanent-access-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here
WHATSAPP_BUSINESS_PHONE=+56908189760
WHATSAPP_API_VERSION=v18.0
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-random-secure-token-here

# WhatsApp Feature Flags
WHATSAPP_ENABLED=false
WHATSAPP_SEND_TO_ADMIN=true
WHATSAPP_ADMIN_PHONE=+56990818976