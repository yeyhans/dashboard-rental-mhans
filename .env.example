# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Backend Configuration
PORT=4000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:4321
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
# Email domain configured in Resend (mail.mariohans.cl)
PUBLIC_EMAIL_DOMAIN=mail.mariohans.cl

# Legacy SMTP Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Google Calendar Configuration
# Opción 1: Service Account (Recomendado para producción)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}
# O alternativamente, ruta al archivo JSON:
# GOOGLE_SERVICE_ACCOUNT_KEY_FILE=/path/to/service-account-key.json

# Opción 2: OAuth2 (Para desarrollo)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ID del calendario específico (opcional, por defecto usa 'primary')
GOOGLE_CALENDAR_ID=primary