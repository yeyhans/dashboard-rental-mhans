---
import "../styles/globals.css";
import { supabase } from "../lib/supabase";
import { ModeToggle } from "../components/ModeToggle";
import { 
  ChevronLeft, 
  ChevronRight, 
  Home, 
  ShoppingBag, 
  Users, 
  Package, 
  ClipboardList, 
  Tag, 
  CreditCard, 
  LogOut, 
  Grid3X3, 
Truck
} from "lucide-react";
interface Props {
  title: string;
}

const description = "Astro and Supabase demo app";
const { title } = Astro.props;
const ogImageURL = new URL("hero.png", Astro.site).href;
const canonicalURL = new URL(Astro.url).href;
const { data: { session } } = await supabase.auth.getSession();
---

<html lang="en" class="h-full w-full">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    
    <style is:inline>
      /* Force immediate application of theme */
      .dark {
        background-color: black;
        color: white;
      }
      body {
        background-color: white;
        color: black;
      }
      html.dark body {
        background-color: black;
        color: white;
      }
      
      /* Footer styling */
      footer {
        background-color: white;
        color: black;
        border-top: 1px solid black;
      }
      
      html.dark footer {
        background-color: black;
        color: white;
        border-top: 1px solid white;
      }
      
      /* Sidebar menu links */
      .sidebar-menu a {
        color: black;
      }
      
      html.dark .sidebar-menu a {
        color: white;
      }
      
      .sidebar-menu a:hover {
        background-color: rgba(0, 0, 0, 0.05);
      }
      
      html.dark .sidebar-menu a:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }
      
      /* Sub-menu styling */
      .menu-section button:hover {
        background-color: rgba(0, 0, 0, 0.05);
      }
      
      html.dark .menu-section button:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }
      
      .submenu a:hover {
        background-color: rgba(0, 0, 0, 0.03);
      }
      
      html.dark .submenu a:hover {
        background-color: rgba(255, 255, 255, 0.08);
      }
      
      .submenu-arrow {
        transition: transform 0.2s ease;
      }
      
      /* Tooltip styling for collapsed sidebar */
      .group:hover .absolute {
        display: block;
      }
      
      html.dark .group .absolute {
        background-color: white;
        color: black;
      }
    </style>
  </head>
  <body class="flex flex-col h-full w-full">

    <!-- Theme Toggle Button -->
    <div class="fixed top-4 right-4 z-30">
      <ModeToggle client:load />
    </div>

    <main id="main-content" class="flex-1 transition-all duration-300 ease-in-out ml-0">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="py-4 text-center transition-all duration-300 ease-in-out ml-0" id="footer">
      <div class="container mx-auto px-4">
        <p class="text-sm">
          Hecho con amor por su hermanito <a href="https://instagram.com/chocolohans" target="_blank" rel="noopener noreferrer" class="font-bold hover:underline">Yey</a> ❤️
        </p>
      </div>
    </footer>

    {session && (
      <aside class="fixed left-0 top-0 h-screen transition-all duration-300 z-10" id="sidebar">
        <button 
          onclick="toggleSidebar()"
          class="fixed sidebar-toggle-btn transition-all duration-300 p-2 rounded-lg shadow z-20 top-4"
          style="left: 240px"
          aria-label="Toggle Sidebar"
        >
          <ChevronLeft className="h-5 w-5 sidebar-icon-collapse" />
          <ChevronRight className="h-5 w-5 sidebar-icon-expand hidden" />
        </button>
        
        <div class="w-64 h-full shadow transition-all duration-300 pointer-events-auto" id="sidebar-content">
          <div class="p-4">
            <div class="flex justify-center items-center py-4 mb-4 border-b">
              <img src="/logo-black.png" alt="Logo" class="h-12 w-auto logo-image" data-dark-src="/logo-black.png" data-light-src="/logo-white.png" onerror="this.src='/placeholder-logo.svg'; this.onerror=null;">
            </div>
            <nav class="space-y-2 sidebar-menu">
              <a 
                href="/dashboard" 
                class="flex items-center px-4 py-2 rounded-lg"
              >
                <Home className="h-5 w-5 sidebar-icon" />
                <span class="sidebar-text ml-3">Dashboard</span>
              </a>
              <!-- Orders Section with Sub-menu -->
              <div class="menu-section">
                <button 
                  onclick="toggleSubmenu('orders')"
                  class="flex items-center justify-between px-4 py-2 rounded-lg w-full text-left"
                >
                  <div class="flex items-center">
                    <ShoppingBag className="h-5 w-5 sidebar-icon" />
                    <span class="sidebar-text ml-3">Pedidos</span>
                  </div>
                  <ChevronRight className="h-4 w-4 sidebar-icon transition-transform duration-200 submenu-arrow" />
                </button>
                <div class="submenu ml-8 mt-1 space-y-1 hidden" id="orders-submenu">
                  <a 
                    href="/orders" 
                    class="flex items-center px-4 py-2 rounded-lg text-sm"
                  >
                    <ClipboardList className="h-4 w-4 sidebar-icon mr-2" />
                    <span class="sidebar-text">Todos los Pedidos</span>
                  </a>
                  <a 
                    href="/orders/coupons" 
                    class="flex items-center px-4 py-2 rounded-lg text-sm"
                  >
                    <Tag className="h-4 w-4 sidebar-icon mr-2" />
                    <span class="sidebar-text">Cupones</span>
                  </a>
                  <a
                    href="/orders/shipping"
                    class="flex items-center px-4 py-2 rounded-lg text-sm"
                  >
                    <Truck className="h-4 w-4 sidebar-icon mr-2" />
                    <span class="sidebar-text">Envios</span>
                  </a>
                </div>
              </div>
              <a 
                href="/users" 
                class="flex items-center px-4 py-2 rounded-lg"
              >
                <Users className="h-5 w-5 sidebar-icon" />
                <span class="sidebar-text ml-3">Usuarios</span>
              </a>
              <!-- Products Section with Sub-menu -->
              <div class="menu-section">
                <button 
                  onclick="toggleSubmenu('products')"
                  class="flex items-center justify-between px-4 py-2 rounded-lg w-full text-left"
                >
                  <div class="flex items-center">
                    <Package className="h-5 w-5 sidebar-icon" />
                    <span class="sidebar-text ml-3">Productos</span>
                  </div>
                  <ChevronRight className="h-4 w-4 sidebar-icon transition-transform duration-200 submenu-arrow" />
                </button>
                <div class="submenu ml-8 mt-1 space-y-1 hidden" id="products-submenu">
                  <a 
                    href="/products" 
                    class="flex items-center px-4 py-2 rounded-lg text-sm"
                  >
                    <Package className="h-4 w-4 sidebar-icon mr-2" />
                    <span class="sidebar-text">Todos los Productos</span>
                  </a>
                  <a 
                    href="/products/categories" 
                    class="flex items-center px-4 py-2 rounded-lg text-sm"
                  >
                    <Grid3X3 className="h-4 w-4 sidebar-icon mr-2" />
                    <span class="sidebar-text">Categorías</span>
                  </a>
                </div>
              </div>
              <a 
                href="/payments-table" 
                class="flex items-center px-4 py-2 rounded-lg"
              >
                <CreditCard className="h-5 w-5 sidebar-icon" />
                <span class="sidebar-text ml-3">Pagos</span>
              </a>
              
              <!-- Logout Button -->
              <button 
                onclick="handleLogout()"
                class="absolute bottom-0 right-0 flex items-center px-4 py-2 rounded-lg w-full text-left hover:bg-red-50 dark:hover:bg-red-900/20 text-red-600 dark:text-red-400 mt-4 border-t border-gray-200 dark:border-gray-700 pt-4"
              >
                <LogOut className="h-5 w-5 sidebar-icon" />
                <span class="sidebar-text ml-3">Cerrar Sesión</span>
              </button>
            </nav>
          </div>
        </div>

        <div class="fixed left-0 top-0 h-screen transition-all duration-300 hidden pointer-events-auto z-10" id="icon-only-sidebar">
          <div class="h-full w-16 p-4">
            <div class="flex justify-center items-center py-4 mb-8 border-b">
              <a href="/" class="flex items-center justify-center">
                <img src="/toggle-button-black.png" alt="Logo" class="h-18 w-18 logo-icon-image" data-dark-src="/toggle-button-black.png" data-light-src="/toggle-button-white.png" onerror="this.src='/placeholder-icon.svg'; this.onerror=null;">
              </a>
            </div>
            <nav class="space-y-6 flex flex-col items-center pt-2 sidebar-menu">
              <a 
                href="/dashboard" 
                class="p-2 rounded-lg"
              >
                <Home className="h-6 w-6" />
              </a>
                <a 
                  href="/orders" 
                  class="p-2 rounded-lg block"
                  title="Pedidos"
                >
                  <ShoppingBag className="h-6 w-6" />
                </a>
                <a
                  href="/orders/shipping"
                  class="p-2 rounded-lg block"
                  title="Envios"
                >
                  <Truck className="h-6 w-6" />
                </a>


              <a
              href="/orders/coupons"
              class="p-2 rounded-lg"
              >
                <Tag className="h-6 w-6" />
              </a>

              <a 
                href="/users" 
                class="p-2 rounded-lg"
              >
                <Users className="h-6 w-6" />
              </a>

                <a 
                  href="/products" 
                  class="p-2 rounded-lg block"
                  title="Productos"
                >
                  <Package className="h-6 w-6" />
                </a>

              <a 
                href="/payments-table" 
                class="p-2 rounded-lg"
              >
                <CreditCard className="h-6 w-6" />
              </a>
              <!-- Logout Button for collapsed sidebar -->
              <button 
                onclick="handleLogout()"
                class="absolute bottom-0 right-0 p-2 rounded-lg text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 mt-4 border-t border-gray-200 dark:border-gray-700 pt-4"
                title="Cerrar Sesión"
              >
                <LogOut className="h-6 w-6" />
              </button>
            </nav>
          </div>
        </div>
      </aside>
    )}

    
<script is:inline>
  // Simplified JavaScript for sidebar toggle
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    if (!sidebar) return;

    const sidebarContent = document.getElementById('sidebar-content');
    const iconOnlySidebar = document.getElementById('icon-only-sidebar');
    const collapseIcon = document.querySelector('.sidebar-icon-collapse');
    const expandIcon = document.querySelector('.sidebar-icon-expand');
    const toggleBtn = document.querySelector('.sidebar-toggle-btn');
    const mainContent = document.getElementById('main-content');
    const footer = document.getElementById('footer');
    const isMobile = window.innerWidth < 768;
    
    const isCollapsed = sidebar.classList.contains('collapsed');
    
    // Toggle collapse state
    sidebar.classList.toggle('collapsed');
    
    if (isCollapsed) {
      // Expanding
      if (sidebarContent) sidebarContent.classList.remove('transform', '-translate-x-64');
      if (iconOnlySidebar) iconOnlySidebar.classList.add('hidden');
      if (collapseIcon) collapseIcon.classList.remove('hidden');
      if (expandIcon) expandIcon.classList.add('hidden');
      if (toggleBtn) toggleBtn.style.left = '240px'; // Ajuste para posición expandida
      if (mainContent) {
        mainContent.classList.remove('ml-0', 'ml-16');
        mainContent.classList.add('ml-64');
      }
      if (footer) {
        footer.classList.remove('ml-0', 'ml-16');
        footer.classList.add('ml-64');
      }
    } else {
      // Collapsing
      if (sidebarContent) sidebarContent.classList.add('transform', '-translate-x-64');
      if (!isMobile && iconOnlySidebar) {
        iconOnlySidebar.classList.remove('hidden');
      }
      if (collapseIcon) collapseIcon.classList.add('hidden');
      if (expandIcon) expandIcon.classList.remove('hidden');
      
      if (toggleBtn) {
        if (isMobile) {
          toggleBtn.style.left = '16px';
        } else {
          toggleBtn.style.left = '60px'; // Ajuste para posición colapsada
        }
      }
      if (mainContent) {
        mainContent.classList.remove('ml-64');
        mainContent.classList.add(isMobile ? 'ml-0' : 'ml-16');
      }
      if (footer) {
        footer.classList.remove('ml-64');
        footer.classList.add(isMobile ? 'ml-0' : 'ml-16');
      }
    }
  }

  // Initialize sidebar on page load with simplified logic
  document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('sidebar');
    if (!sidebar) return;

    const sidebarContent = document.getElementById('sidebar-content');
    const iconOnlySidebar = document.getElementById('icon-only-sidebar');
    const collapseIcon = document.querySelector('.sidebar-icon-collapse');
    const expandIcon = document.querySelector('.sidebar-icon-expand');
    const toggleBtn = document.querySelector('.sidebar-toggle-btn');
    const mainContent = document.getElementById('main-content');
    const footer = document.getElementById('footer');
    const isMobile = window.innerWidth < 768;
    
    // Start with collapsed sidebar
    sidebar.classList.add('collapsed');
    sidebarContent.classList.add('transform', '-translate-x-64');
    
    if (!isMobile) {
      iconOnlySidebar.classList.remove('hidden');
      toggleBtn.style.left = '60px'; // Posición inicial del botón
      mainContent.classList.add('ml-16');
      footer.classList.add('ml-16');
    } else {
      iconOnlySidebar.classList.add('hidden');
      toggleBtn.style.left = '16px'; // Posición inicial del botón en móvil
      mainContent.classList.add('ml-0');
      footer.classList.add('ml-0');
    }
    
    collapseIcon.classList.add('hidden');
    expandIcon.classList.remove('hidden');
    
    // Create simple placeholders if needed
    if (!document.querySelector('[data-placeholder-created="true"]')) {
      const styles = document.createElement('style');
      styles.textContent = `
        .placeholder-logo {
          background: #000000;
          color: white;
          border-radius: 8px;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        
        /* Sidebar styling for dark/light mode */
        html.dark #sidebar-content, 
        html.dark #icon-only-sidebar > div {
          background-color: black;
          color: white;
          border-color: white;
        }
        
        #sidebar-content,
        #icon-only-sidebar > div {
          background-color: white;
          color: black;
          border-color: black;
        }
        
        html.dark .sidebar-toggle-btn {
          background-color: black;
          color: white;
          border-color: white;
        }
        
        .sidebar-toggle-btn {
          background-color: white;
          color: black;
          border-color: black;
          box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }
        
        html.dark .sidebar-icon-collapse,
        html.dark .sidebar-icon-expand,
        html.dark .sidebar-icon {
          color: white;
        }
        
        .sidebar-icon-collapse,
        .sidebar-icon-expand,
        .sidebar-icon {
          color: black;
        }
        
        /* Footer styling */
        html.dark #footer {
          background-color: black;
          color: white;
          border-top-color: white;
        }
        
        #footer {
          background-color: white;
          color: black;
          border-top-color: black;
        }
        
        html.dark #footer a {
          color: white;
        }
        
        #footer a {
          color: black;
        }

        /* Ensure sidebar doesn't interfere with page content */
        body.sidebar-open {
          overflow: hidden;
        }
        
        #sidebar.collapsed {
          pointer-events: none;
        }
        
        #sidebar.collapsed #sidebar-content {
          pointer-events: none;
        }
        
        #sidebar.collapsed #icon-only-sidebar,
        #sidebar.collapsed .sidebar-toggle-btn {
          pointer-events: auto;
        }
      `;
      document.head.appendChild(styles);
      document.body.setAttribute('data-placeholder-created', 'true');
    }
    
    // Apply theme to sidebar
    applyThemeToSidebar();
    
    // Update logo images based on theme
    updateLogoImages();
  });
  
  // Function to apply current theme to sidebar
  function applyThemeToSidebar() {
    const isDark = document.documentElement.classList.contains('dark');
    const sidebar = document.getElementById('sidebar');
    if (!sidebar) return;
    
    if (isDark) {
      sidebar.classList.add('dark-theme');
      sidebar.classList.remove('light-theme');
    } else {
      sidebar.classList.add('light-theme');
      sidebar.classList.remove('dark-theme');
    }
  }
  
  // Function to update logo images based on theme
  function updateLogoImages() {
    const isDark = document.documentElement.classList.contains('dark');
    const logoImages = document.querySelectorAll('.logo-image, .logo-icon-image');
    
    logoImages.forEach(img => {
      const darkSrc = img.getAttribute('data-dark-src');
      const lightSrc = img.getAttribute('data-light-src');
      
      if (darkSrc && lightSrc) {
        img.src = isDark ? darkSrc : lightSrc;
      }
    });
  }
  
  // Simplified resize handler
  window.addEventListener('resize', function() {
    const sidebar = document.getElementById('sidebar');
    const iconOnlySidebar = document.getElementById('icon-only-sidebar');
    const toggleBtn = document.querySelector('.sidebar-toggle-btn');
    const mainContent = document.getElementById('main-content');
    const footer = document.getElementById('footer');
    const isMobile = window.innerWidth < 768;
    
    if (sidebar.classList.contains('collapsed')) {
      if (isMobile) {
        iconOnlySidebar.classList.add('hidden');
        toggleBtn.style.left = '16px';
        mainContent.classList.remove('ml-16');
        mainContent.classList.add('ml-0');
        footer.classList.remove('ml-16');
        footer.classList.add('ml-0');
      } else {
        iconOnlySidebar.classList.remove('hidden');
        toggleBtn.style.left = '60px';
        mainContent.classList.remove('ml-0');
        mainContent.classList.add('ml-16');
        footer.classList.remove('ml-0');
        footer.classList.add('ml-16');
      }
    } else {
      // Cuando el sidebar está expandido
      iconOnlySidebar.classList.add('hidden');
      toggleBtn.style.left = '240px';
      footer.classList.add('ml-64');
    }
  });

  // Handle submenu toggle functionality
  function toggleSubmenu(menuId) {
    const submenu = document.getElementById(menuId + '-submenu');
    const arrow = document.querySelector(`button[onclick="toggleSubmenu('${menuId}')"] .submenu-arrow`);
    
    if (!submenu || !arrow) return;
    
    const isHidden = submenu.classList.contains('hidden');
    
    if (isHidden) {
      // Show submenu
      submenu.classList.remove('hidden');
      arrow.style.transform = 'rotate(90deg)';
    } else {
      // Hide submenu
      submenu.classList.add('hidden');
      arrow.style.transform = 'rotate(0deg)';
    }
  }

  // Handle logout functionality
  async function handleLogout() {
    try {
      const response = await fetch('/api/auth/logout', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      });

      if (response.ok) {
        // On successful logout, the server has cleared the session cookies.
        // Now, redirect the user to the home page.
        window.location.href = '/';
      } else {
        console.error('Logout failed. Server responded with:', response.status);
        // Even if the API call fails, force a redirect to the home page.
        window.location.href = '/';
      }
    } catch (error) {
      console.error('An error occurred during logout:', error);
      // In case of a network error, also redirect to the home page.
      window.location.href = '/';
    }
  }
</script>

<script>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
      
      // Update sidebar theme when the main theme changes
      if (typeof applyThemeToSidebar === 'function') {
        applyThemeToSidebar();
      }
      
      // Update logo images when theme changes
      if (typeof updateLogoImages === 'function') {
        updateLogoImages();
      }
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
	
	// Initial logo image update
	document.addEventListener('DOMContentLoaded', function() {
	  if (typeof updateLogoImages === 'function') {
	    updateLogoImages();
	  }
	});
</script>

  </body>
</html>
