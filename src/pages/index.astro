---
import Base from "../layout/Base.astro";
import { LoginForm } from "../components/login-form";

export const prerender = false;
const title = "Panel de Administración - Rental Mario Hans";
---

<Base title={title}>
  <main class="flex-1 flex flex-col items-center justify-center min-h-screen bg-background">
    <div class="w-full max-w-md mx-auto p-8">
      <!-- Admin Badge -->
      <div class="mb-6 text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300 rounded-full text-sm font-semibold border-2 border-red-300 dark:border-red-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          Acceso Solo para Administradores
        </div>
      </div>

      <!-- Login Form -->
      <LoginForm client:load />

      <!-- Warning Message -->
      <div class="mt-6 p-4 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg">
        <div class="flex items-start gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-600 dark:text-amber-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h3 class="text-sm font-semibold text-amber-800 dark:text-amber-300 mb-1">
              Área Restringida
            </h3>
            <p class="text-xs text-amber-700 dark:text-amber-400">
              Este panel está reservado exclusivamente para administradores autorizados.
              El acceso requiere credenciales válidas y permisos de administrador verificados.
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Base>
